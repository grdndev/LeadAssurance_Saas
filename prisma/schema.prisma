// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String?
  name          String?
  role          String    @default("BROKER") // BROKER, PROVIDER, ADMIN
  credits       Float     @default(0)

  // Profile fields
  phone         String?
  companyName   String?
  siret         String?
  orias         String?
  address       String?

  // Relations
  leadsCreated  Lead[]    @relation("SourceProvider")
  leadsBought   Lead[]    @relation("BuyerBroker")
  reservations  MarketplaceReservation[]
  transactions  Transaction[]
  notifications Notification[]

  // NextAuth
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// NextAuth Models
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Lead {
  id              String         @id @default(cuid())
  productType     String         // Enum became String for SQLite
  status          String         @default("PENDING_APPROVAL") // PENDING_APPROVAL, STOCK, SOLD, DISPUTED, REJECTED

  // Lead Type (LEAD or APPOINTMENT)
  leadType        String         @default("LEAD") // LEAD, APPOINTMENT

  // Basic Info
  firstName       String
  lastName        String
  phone           String
  email           String
  zipCode         String
  city            String

  // Dynamic Attributes
  attributes      String         // JSON stringified for SQLite (no native JSON)

  // Appointment-specific fields (only for leadType = APPOINTMENT)
  appointmentDate     DateTime?
  appointmentChannel  String?      // PHONE, VISIO
  appointmentStatus   String?      // PENDING, CONFIRMED, CANCELLED
  availabilities      String?      // JSON stringified available slots
  confirmationSentAt  DateTime?

  // Options
  isAppointment   Boolean        @default(false) // DEPRECATED: use leadType instead
  isExclusive     Boolean        @default(true)
  price           Float

  consent         Consent?

  // Relations
  providerId      String
  provider        User           @relation("SourceProvider", fields: [providerId], references: [id])
  brokerId        String?
  broker          User?          @relation("BuyerBroker", fields: [brokerId], references: [id])

  reservation     MarketplaceReservation?
  disputes        Dispute[]

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([status])
  @@index([productType])
}

model Consent {
  id              String   @id @default(cuid())
  leadId          String   @unique
  lead            Lead     @relation(fields: [leadId], references: [id])

  consentText     String
  ipAddress       String
  userAgent       String
  urlSource       String
  timestamp       DateTime @default(now())
  proofHash       String?
}

model MarketplaceReservation {
  id        String   @id @default(cuid())
  leadId    String   @unique
  lead      Lead     @relation(fields: [leadId], references: [id])
  brokerId  String
  broker    User     @relation(fields: [brokerId], references: [id])

  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([expiresAt])
}

model Dispute {
  id          String   @id @default(cuid())
  leadId      String
  lead        Lead     @relation(fields: [leadId], references: [id])
  brokerId    String
  reason      String
  description String?
  status      String   @default("OPEN") // OPEN, RESOLVED_REFUNDED, RESOLVED_REJECTED

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([leadId])
  @@index([status])
}

model Transaction {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  type        String   // CREDIT_PURCHASE, LEAD_PURCHASE, LEAD_SALE, REFUND
  amount      Float
  credits     Float
  description String
  stripeId    String?  // For Stripe payment tracking

  createdAt   DateTime @default(now())
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  type      String   // LEAD_PURCHASED, LEAD_SOLD, CREDIT_LOW, DISPUTE_OPENED, LEAD_APPROVED, LEAD_REJECTED
  title     String
  message   String
  read      Boolean  @default(false)
  link      String?  // Optional link to related resource

  createdAt DateTime @default(now())
  
  @@index([userId, read])
  @@index([createdAt])
}
